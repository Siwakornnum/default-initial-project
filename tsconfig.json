{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@apis": ["./src/apis"],
      "@apis/*": ["./src/apis/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@assets":["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@configs": ["./src/configs"],
      "@configs/*": ["./src/configs/*"],
      "@constants": ["./src/constants"],
      "@constants/*": ["./src/constants/*"],
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      "@hooks": ["./src/hooks"],
      "@hooks/*": ["./src/hooks/*"],
      "@recoils":[ "./src/recoils"],
      "@recoils/*":[ "./src/recoils/*"],
      "@types":[ "./src/types"],
      "@types/*":[ "./src/types/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@langs": ["./src/langs"],
      "@langs/*": ["./src/langs/*"],
      "@router": ["./src/router"],
      "@router/*": ["./src/router/*"],
    }
  },
  "types": ["node", "@honkhonk/vite-plugin-svgr/client"],
  "include": [
    "src",
    "types", "src/custom.d.ts"
  ],
  "exclude": [ "**/*.test.ts", "**/*.test.tsx"]
}
